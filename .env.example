# Application Settings
APP_NAME=biomedical-search-engine
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PUBMED=pubmed_articles
ELASTICSEARCH_INDEX_TRIALS=clinical_trials

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/biomedical_search
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# PubMed API
PUBMED_API_KEY=your_ncbi_api_key_here
PUBMED_EMAIL=your_email@example.com
PUBMED_RATE_LIMIT=10

# ClinicalTrials.gov API
CLINICALTRIALS_API_URL=https://clinicaltrials.gov/api/v2

# Model Settings
MODEL_BIOBERT=dmis-lab/biobert-v1.1
MODEL_CLINICALBERT=emilyalsentzer/Bio_ClinicalBERT
MODEL_QA=dmis-lab/biobert-base-cased-v1.1-squad
MODEL_CACHE_DIR=./models
MODEL_MAX_LENGTH=512
MODEL_BATCH_SIZE=16

# Search Settings
SEARCH_TOP_K=20
SEARCH_RERANK_TOP_K=5
SEARCH_MIN_SCORE=0.5
SEARCH_HYBRID_ALPHA=0.7

# QA Settings
QA_MAX_ANSWER_LENGTH=100
QA_MIN_CONFIDENCE=0.3
QA_TOP_ANSWERS=3

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OpenClaw (or OpenAI-compatible)
OPENCLAW_API_KEY=sk-openclaw-placeholder
OPENCLAW_API_BASE=http://localhost:8000/v1
