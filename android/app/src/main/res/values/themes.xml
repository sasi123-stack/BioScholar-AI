<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main App Theme -->
    <style name="Theme.BioMedScholar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash Screen Theme (Android 12+) -->
    <style name="Theme.BioMedScholar.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0056D2</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_dna</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.BioMedScholar</item>
    </style>
</resources>
