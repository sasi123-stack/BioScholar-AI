# Environment variables for Google Cloud Run deployment

# Elasticsearch Configuration
ELASTICSEARCH_HOST=your-elasticsearch-host.com
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=https
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-password

# Redis Configuration  
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# PostgreSQL Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# API Configuration
PUBMED_API_KEY=your-pubmed-api-key
CLINICAL_TRIALS_API_KEY=your-clinical-trials-api-key

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
MAX_WORKERS=4

# CORS Settings (update with your frontend URL)
ALLOWED_ORIGINS=https://your-frontend-url.web.app,https://your-frontend-url.firebaseapp.com
